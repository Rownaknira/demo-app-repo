<p>

    <h2>
        <strong>Entry</strong>
    </h2>    
	<div class="form-group">
        <strong>Title: </strong><%= @entry.title  %>
    </div> 
    <div class="form-group">
        <strong>Body: </strong><%= @entry.body %>
    </div>
    <div class="form-group">
        <strong>Date: </strong><%= @entry.date.strftime('%m/%d/%Y') %>
    </div>
    
       
       
	<div class="form-group">
	    <table>
	        <% @entry.comments.each do |comment| %>
	        <tr><td><strong>Comment: </strong><%= comment.comment  %></td></tr>
	        <tr><td><strong>posted on: </strong><%= comment.created_at.strftime('%m/%d/%Y')  %></td></tr>
	        <tr><td>___________________________________________________________________________</td></tr>
	        <% end%>
	    </table>
    </div> 
   
</p>